<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_bg_pressed"
    android:orientation="vertical"
    android:gravity="bottom"
    android:keepScreenOn="true"
    >

    <RelativeLayout
        android:id="@+id/rl_audiowindow_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_fafbfc"
        >

        <TextView
            android:id="@+id/tv_audiowindow_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_A6AEB5"
            android:textSize="@dimen/font_14"
            android:text="可录制5分钟"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_centerHorizontal="true"
            />

        <com.pxwx.stududent.mp3recorder.view.AudioWaveView
            android:id="@+id/awv_audiowindow_wave"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginLeft="@dimen/dp_42"
            android:layout_marginRight="@dimen/dp_43"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_below="@+id/tv_audiowindow_time"
            />

        <ImageView
            android:id="@+id/iv_audiowindow_recorder"
            android:layout_width="@dimen/dp_62"
            android:layout_height="@dimen/dp_62"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/awv_audiowindow_wave"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginBottom="@dimen/dp_15"
            android:tag="stop"
            android:src="@mipmap/recorder_stop"
            />


    </RelativeLayout>


</LinearLayout>
